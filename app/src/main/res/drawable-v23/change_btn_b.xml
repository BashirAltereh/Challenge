<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<item android:state_pressed="true" android:drawable="@drawable/butun_bb" />-->
    <!--<item android:drawable="@drawable/butun_b" />-->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="0dp" android:color="#dde4d373" />
                    <corners android:radius="50dp" />
                    <solid android:color="@color/blue_pressed" />
                </shape>

            </item>

            <item android:width="40dp" android:height="40dp" android:drawable="@drawable/ic_two" android:gravity="right|center_vertical" android:right="10dp">

            </item>


        </layer-list>

    </item>


    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="0dp" android:color="#dde4d373" />
                    <corners android:radius="50dp" />
                    <solid android:color="@color/blue" />
                </shape>

            </item>

            <item android:width="50dp" android:height="50dp" android:drawable="@drawable/ic_two" android:gravity="right|center_vertical" android:right="10dp">

            </item>
        </layer-list>
    </item>

</selector>